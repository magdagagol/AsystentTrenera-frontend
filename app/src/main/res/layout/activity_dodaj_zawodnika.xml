<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zawodnik.DodajZawodnika">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/zawodnikImie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Imie"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/zawodnikNazwisko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nazwisko"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/zawodnikRokUrodzenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Rok urodzenia"
            android:inputType="date" />

        <EditText
            android:id="@+id/zawodnikEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/zawodnikNumerTelefonu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Numer telefonu"
            android:inputType="phone" />

        <Button
            android:id="@+id/dodajZawodnika"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapisz" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>